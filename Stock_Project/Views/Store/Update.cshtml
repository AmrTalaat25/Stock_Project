@model Stock_Project.Models.Store

@{
    ViewData["Title"] = "Update Store";
}

<h1>Update Store</h1>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="StoreId" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location" class="control-label"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CreatedDate" class="control-label"></label>
        <input asp-for="CreatedDate" class="form-control" type="datetime-local" value="@Model.CreatedDate.ToString("yyyy-MM-ddTHH:mm")" readonly />
        <span asp-validation-for="CreatedDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Get" class="btn btn-secondary">Cancel</a>
    </div>
</form>


}
